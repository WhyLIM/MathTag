{
    "name": "mathtag",
    "displayName": "MathTag",
    "description": "A plugin for automatic numbering of mathematical formulas in markdown.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mathTag.addMathTagNumbers",
                "title": "Add MathTag Numbers"
            },
            {
                "command": "mathTag.clearMathTagNumbers",
                "title": "Clear MathTag Numbers"
            }
        ],
        "keybindings": [
            {
                "command": "mathTag.addMathTagNumbers",
                "key": "ctrl+shift+a"
            },
            {
                "command": "mathTag.clearMathTagNumbers",
                "key": "ctrl+shift+c"
            }
        ]
        "menus": {
            "editor/context": [
                {
                    "command": "mathTag.addMathTagNumbers",
                    "group": "editing",
                    "when": "editorFocus"
                },
                {
                    "command": "mathTag.clearMathTagNumbers",
                    "group": "editing",
                    "when": "editorFocus"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.8.4",
        "@vscode/test-electron": "^2.1.5"
    }
}